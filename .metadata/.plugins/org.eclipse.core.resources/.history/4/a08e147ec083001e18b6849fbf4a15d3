<%@ page language="java" contentType="text/html; charset=UTF-8" pageEncoding="UTF-8"%>
<%@ taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core" %>
<!DOCTYPE html>
<html lang="ko">
<head>
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.4/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="css/bootstrap.css">
    <link rel="stylesheet" href="css/custom.css" type="text/css">
    <script src="js/bootstrap.js"></script>
    <title>JSP AJAX 실시간 익명 채팅 사이트</title>
    <style>
        body {
            font-family: Arial, sans-serif;
        }

        .container {
            margin-top: 20px;
        }

        .chat-widget {
            overflow-y: auto;
            width: auto;
            height: 300px;
            border: 1px solid #ddd;
            padding: 10px;
        }

        #chat-messages p {
            margin: 5px 0;
        }

        #chatContent {
            height: 80px;
        }

        #sendMessageBtn {
            margin-top: 5px;
        }
    </style>
</head>

<body>
    <div class="container">
        <div class="chat-widget">
            <div id="chat-messages"></div>
        </div>
        <div>
            <textarea id="chatContent" class="form-control" placeholder="메시지를 입력하세요" maxlength="100"></textarea>
            <button type="button" id="sendMessageBtn" class="btn btn-default">전송</button>
        </div>
    </div>

    <script>
    $(document).ready(function() {
        var autoScroll = true;
        var userName = prompt("닉네임을 입력하세요"); // 사용자에게 이름 입력 받기

        // 이름이 입력되지 않은 경우 기본값 사용
        if (!userName) {
            userName = "익명";
        }

        // 메세지 조회 함수
        function getChatMessages() {
            $.ajax({
                type: "POST",
                url: "selectChat.ch",
                dataType: "json",
                success: function(response) {
                    var messagesDiv = $("#chat-messages");

                    // 역순으로 출력
                    messagesDiv.empty(); // 기존 메시지 삭제
                    for (var i = response.length - 1; i >= 0; i--) {
                        var message = response[i];
                        messagesDiv.append("<p><strong>" + message.chatName + ":</strong> " + message.chatContent + " - " + message.chatDate + "</p>");
                    }

                    if (autoScroll) {
                        // 자동 스크롤 설정
                        messagesDiv.scrollTop(messagesDiv.prop("scrollHeight"));
                        autoScroll = false;
                    }
                },
                error: function(xhr, status, error) {
                    console.log(xhr.responseText);
                    console.log(status);
                    console.log(error);
                }
            });
        }

        // 초기 메세지 조회
        getChatMessages();

        // 전송 버튼 클릭 이벤트
        $("#sendMessageBtn").click(function() {
            sendMessage();
        });

        // 엔터 키 입력 이벤트
        $("#chatContent").keydown(function(e) {
            if (e.keyCode == 13) {
                e.preventDefault();
                sendMessage();
            }
        });

        // 메시지 전송 함수
        function sendMessage() {
            var messageContent = $("#chatContent").val().trim();

            if (messageContent !== "") {
                $.ajax({
                    type: "POST",
                    url: "saveChat.ch",
                    data: { chatName: userName, chatContent: messageContent },
                    success: function(response) {
                        // 전송 후 조회
                        getChatMessages();
                        autoScroll = true; // 메세지 추가되면 스크롤 아래로
                    },
                    error: function(error) {
                        console.log(error);
                    }
                });

                // 입력창 초기화
                $("#chatContent").val("");
            }
        }

        // 자동스크롤 비활성화
        $("#chat-messages").on("scroll", function() {
            autoScroll = false;
        });
    });
</script>

</body>
</html>
