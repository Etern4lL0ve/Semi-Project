			      url: "deleteFromLikeTable.po",
				      data: { 
				    	  postNo: ${p.postNo},
				    	  mno : ${loginMember.memberNo}
				    
				      },
				      success: function(result) {
				        if (result === "success") {
				          alert("좋아요를 해제하였습니다.");
				          $("#likeButton>i").removeClass('bi-heart-fill');
						  $("#likeButton>i").addClass('bi-heart');
				
				          // 쿠키에 좋아요 수 저장 (이미 클릭한 경우도 저장해야 함)
