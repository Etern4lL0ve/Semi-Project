		  function increaseInterestCount() {
		    if ($("#interestButton").is(":disabled")) {
		      return; 
		    }
		
		    $.ajax({
		      url: "increaseInterestCount.po",
		      data: { postNo: ${p.postNo} },
		      type: "post",
		      success: function(result) {
		        if (result === "success") {
		          alert("관심을 표시했습니다");
		          $("#interestButton").prop("disabled", true); // 클릭 비활성화
		
		          // 관심 수를 화면에 업데이트
		          var currentInterestCount = parseInt($("#interestCount").text());
		          $("#interestCount").text(currentInterestCount + 1);
		
		          updateInterestStatus();
		          // 쿠키에 관심 수 저장 (이미 클릭한 경우도 저장해야 함)
		          setInterestCountCookie(currentInterestCount + 1);
		        } else {
		          alert("이미 관심을 눌렀습니다");
		        }
		      },
