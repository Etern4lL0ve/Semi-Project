<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Chat Application</title>
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.4/dist/jquery.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <style>
         #chat-container {
            position: fixed;
            display: flex;
            flex-direction: column; /* 세로 방향으로 배치 */
            align-items: flex-end; /* 아이템들을 오른쪽 정렬 */
        }

        #chat-messages {
            overflow-y: auto;
            max-height: 300px; /* 원하는 높이로 조절 */
            width: 220px;
            z-index: 1;
            position: fixed;
            top: 20px;
        }

 #chat-input {
    position: fixed;
    bottom: 300px;
    left: 10px;
    width: 200px; /* 입력창의 너비를 조절 */
    z-index: 2;
}

#chat-input .input-group {
    width: 100%;
}

#messageInput {
    width: calc(100% - 86px);
}

/* 버튼 스타일 추가 */
#sendMessageBtn {
    width: 86px; /* 버튼의 너비를 조절 */
    margin-top: 5px; /* 버튼과 인풋박스 사이의 간격을 설정 */
}
    </style>
</head>
<body>
    <div id="chat-container">
        <div id="chat-messages">
        
        </div>
    </div>
    <div id="chat-input">
        <div class="input-group mb-3">
            <input type="text" class="form-control" placeholder="메세지를 입력하세요" id="messageInput">
            <button class="btn btn-primary" type="button" id="sendMessageBtn">Send</button>
        </div>
    </div>

       <script type="text/javascript">
        $(document).ready(function() {
            var autoScroll = true;

            // 채팅 메시지 가져오기
            function getChatMessages() {
                $.ajax({
                    type: "POST",
                    url: "selectChat.ch",
                    dataType: "json",
                    success: function (response) {
                        var messagesDiv = $("#chat-messages");

                        // 받아온 메시지를 역순으로 출력
                        for (var i = response.length - 1; i >= 0; i--) {
                            var message = response[i];
                            var formattedTime = formatTime(message.chatDate);
                            messagesDiv.append("<p><strong>" + message.chatName + ":</strong> " + message.chatContent + " - " + formattedTime + "</p>");
                        }

                        if (autoScroll) {
                            // 자동 스크롤 설정
                            messagesDiv.scrollTop(messagesDiv.prop("scrollHeight"));
                            autoScroll = false;
                        }
                    },
                    error: function (xhr, status, error) {
                        console.log(xhr.responseText);
                        console.log(status);
                        console.log(error);
                    }
                });
            }

            // 현재 시간을 시-분-초 형식으로 포맷팅
           function formatTime(timestamp) {
    var date = new Date(timestamp);
    var hours = ('0' + date.getHours()).slice(-2);
    var minutes = ('0' + date.getMinutes()).slice(-2);
    var seconds = ('0' + date.getSeconds()).slice(-2);
    return hours + ":" + minutes + ":" + seconds;
}

            // 초기 메시지 조회
            getChatMessages();

            // Send 버튼 클릭 시 메시지 전송
            $("#sendMessageBtn").click(function() {
                var messageInput = $("#messageInput");
                var messageContent = messageInput.val().trim();

                if (messageContent !== "") {
                    $.ajax({
                        type: "POST",
                        url: "saveChat.ch",
                        data: { chatName: "User", chatContent: messageContent },
                        success: function(response) {
                            // 전송 후 채팅 메시지 다시 조회
                            getChatMessages();
                            autoScroll = true; // 새 메시지 추가 후 스크롤을 아래로 이동
                        },
                        error: function(error) {
                            console.log(error);
                        }
                    });

                    // 입력 필드 초기화
                    messageInput.val("");
                }
            });

            // 스크롤이 수동으로 조작된 경우 자동 스크롤 비활성화
            $("#chat-messages").on("scroll", function() {
                autoScroll = false;
            });
        });
    </script>
</body>
</html>
