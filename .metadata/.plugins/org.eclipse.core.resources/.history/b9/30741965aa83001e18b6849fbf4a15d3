<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Chat Room</title>
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.4/dist/jquery.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <style>
		#chat-container {
		    display: flex;
		    flex-direction: column;
		    align-items: center;
		    justify-content: center;
		    height: 100vh;
		}
		
		#chat-messages {
		    font-size: 12px;
		    overflow-y: auto;
		    max-height: 300px;
		    width: 220px;
		    z-index: 1;
		}
		
		#chat-input {
		    width: 100%;
		    max-width: 220px;
		    margin-top: 10px; /* 조절 가능한 마진 값 */
		}
		
		#chat-input .input-group {
		    width: 100%;
		}
		
		#messageInput {
		    width: calc(100% - 86px);
		}
		
		#sendMessageBtn {
		    width: 86px;
		    margin-top: 3px;
		}
    </style>
</head>
<body>
    <div id="chat-container">
        <div id="chat-messages"></div>
    </div>
    <div id="chat-input">
        <div class="input-group mb-3">
            <input type="text" class="form-control" placeholder="메세지를 입력하세요" id="messageInput">
            <button class="btn btn-primary" type="button" id="sendMessageBtn">전송</button>
        </div>
    </div>
<script src="https://cdn.jsdelivr.net/npm/jquery@3.6.4/dist/jquery.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

<script>
 $(document).ready(function() {
    var autoScroll = true;
    var userName = prompt("닉네임을 입력하세요");

    if (!userName) {
        userName = "익명";
    }

    function randomString(length) {
        const base = '가'.charCodeAt(0);
        const range = '힣'.charCodeAt(0) - base + 1;
        let result = '';
        for (let i = 0; i < length; i++) {
            const randomOffset = Math.floor(Math.random() * range);
            result += String.fromCharCode(base + randomOffset);
        }
        return result;
    }

    function getChatMessages() {
        $.ajax({
            type: "POST",
            url: "selectChat.ch", // 이 부분을 서버에 맞게 수정하세요.
            dataType: "json",
            success: function(response) {
                var messagesDiv = $("#chat-messages");

                //messagesDiv.empty();

                for (var i = response.length - 1; i >= 0; i--) {
                    var message = response[i];
                    messagesDiv.append("<p><strong>" + message.chatName + ":</strong> " + message.chatContent + " - " + message.chatDate + "</p>");
                }

                if (autoScroll) {
                    messagesDiv.scrollTop(messagesDiv.prop("scrollHeight"));
                    autoScroll = false;
                }
            },
            error: function(xhr, status, error) {
                console.log(xhr.responseText);
                console.log(status);
                console.log(error);
            }
        });
    }

    getChatMessages();

    $("#sendMessageBtn").click(function() {
        var messageInput = $("#messageInput");
        var messageContent = messageInput.val().trim();

        if (messageContent !== "") {
            $.ajax({
                type: "POST",
                url: "saveChat.ch", // 이 부분을 서버에 맞게 수정하세요.
                data: { chatName: userName, chatContent: messageContent },
                success: function(response) {
                    getChatMessages();
                    autoScroll = true;
                },
                error: function(error) {
                    console.log(error);
                }
            });

            messageInput.val("");
        }
    });

    $("#chat-messages").on("scroll", function() {
        autoScroll = false;
    });

    $(window).on("beforeunload", function() {
        sessionStorage.setItem("randomValue", randomString(5));
    });

    var initialRandomValue = sessionStorage.getItem("randomValue");
    if (initialRandomValue) {
        sessionStorage.removeItem("randomValue");
        randomValue = initialRandomValue;
    }
});

</script>
</body>
</html>
