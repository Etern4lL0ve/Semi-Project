<html>
<head>
    <meta charset="UTF-8">
    <title>Chat Application</title>
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.4/dist/jquery.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <style>
         #chat-container {
            position: fixed;
            display: flex;
            flex-direction: column; /* 세로 방향으로 배치 */
            align-items: flex-end; /* 아이템들을 오른쪽 정렬 */
        }

        #chat-messages {
            overflow-y: auto;
            max-height: 300px; /* 원하는 높이로 조절 */
            width: 220px;
            z-index: 1;
            position: fixed;
            top: 20px;
        }

 #chat-input {
    position: fixed;
    bottom: 300px;
    left: 10px;
    width: 200px; /* 입력창의 너비를 조절 */
    z-index: 2;
}

#chat-input .input-group {
    width: 100%;
}

#messageInput {
    width: calc(100% - 86px);
}

/* 버튼 스타일 추가 */
#sendMessageBtn {
    width: 86px; /* 버튼의 너비를 조절 */
    margin-top: 5px; /* 버튼과 인풋박스 사이의 간격을 설정 */
}
    </style>
</head>
<body>
    <div id="chat-container">
        <div id="chat-messages">
        
        </div>
    </div>
    <div id="chat-input">
        <div class="input-group mb-3">
            <input type="text" class="form-control" placeholder="메세지를 입력하세요" id="messageInput">
            <button class="btn btn-primary" type="button" id="sendMessageBtn">Send</button>
        </div>
    </div>

<script type="text/javascript">
    $(document).ready(function() {
        var autoScroll = true;

        // 채팅 메시지 가져오기
        function getChatMessages() {
            // ... (기존 코드) ...
        }

        // 초기 메시지 조회
        getChatMessages();

        // Send 버튼 클릭 시 메시지 전송
        $("#sendMessageBtn").click(sendMessage);

        // 엔터 키 감지하여 Send 버튼 클릭
		$("#messageInput").keypress(function(e) {
    console.log("Key pressed: " + e.which);
    if (e.which === 13) { // 13은 엔터 키의 keyCode입니다.
        console.log("Enter key pressed");
        sendMessage();
    }
});
		function sendMessage() {
		    console.log("sendMessage called");
		    var messageInput = $("#messageInput");
		    var messageContent = messageInput.val().trim();

		    console.log("Message content: " + messageContent);

		    if (messageContent !== "") {
		        $.ajax({
		            type: "POST",
		            url: "saveChat.ch",
		            data: { chatName: "User", chatContent: messageContent },
		            success: function(response) {
		                // 전송 후 채팅 메시지 다시 조회
		                console.log("Message sent successfully");
		                getChatMessages();
		                autoScroll = true; // 새 메시지 추가 후 스크롤을 아래로 이동
		            },
		            error: function(error) {
		                console.log("Error sending message");
		                console.log(error);
		            }
		        });

		        // 입력 필드 초기화
		        messageInput.val("");
		    }
		}



        // 스크롤이 수동으로 조작된 경우 자동 스크롤 비활성화
        $("#chat-messages").on("scroll", function() {
            autoScroll = false;
        });
    });
</script>
</body>
</html>
