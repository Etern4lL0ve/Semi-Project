	</div>

	<script>
		$(document).ready(function() {
			var autoScroll = true;

			// 랜덤 문자열 생성
			function randomString(length) {
				const base = '가'.charCodeAt(0);
				const range = '힣'.charCodeAt(0) - base + 1;
			
				let result = '';
				for (let i = 0; i < length; i++) {
					const randomOffset = Math.floor(Math.random() * range);
					result += String.fromCharCode(base + randomOffset);
				}
			
				return result;
			}

			// 채팅 메시지 조회
			function getChatMessages() {
				$.ajax({
					type: "POST",
					url: "selectChat.ch",
					dataType: "json",
					success: function (response) {
						var messagesDiv = $("#chat-messages");

						// 역순으로 출력
						for (var i = response.length - 1; i >= 0; i--) {
							var message = response[i];
							messagesDiv.append("<p><strong>" + message.chatName + ":</strong> " + message.chatContent + " - " + message.chatDate + "</p>");
						}

						if (autoScroll) {
							// 자동 스크롤 설정
							messagesDiv.scrollTop(messagesDiv.prop("scrollHeight"));
							autoScroll = false;
						}
					},
					error: function (xhr, status, error) {
						console.log(xhr.responseText);
						console.log(status);
						console.log(error);
					}
				});
			}

			// 초기 메시지 조회
			getChatMessages();

			// 전송 버튼 클릭 이벤트
			$("#sendMessageBtn").click(function() {
				var messageInput = $("#messageInput");
				var messageContent = messageInput.val().trim();

				if (messageContent !== "") {
					$.ajax({
						type: "POST",
						url: "saveChat.ch",
						data: { chatName: randomString(3), chatContent: messageContent },
						success: function(response) {
							// 전송 후 조회
							getChatMessages();
							autoScroll = true; // 메시지 추가되면 스크롤 아래로
						},
						error: function(error) {
							console.log(error);
						}
					});

					// 입력창 초기화
					messageInput.val("");
				}
			});

			// 자동 스크롤 비활성화
			$("#chat-messages").on("scroll", function() {
				autoScroll = false;
			});

			// 페이지 새로고침 시 랜덤 값 변경
			$(window).on("beforeunload", function() {
				sessionStorage.setItem("randomValue", randomString(5));
			});

			// 페이지 로딩 시 랜덤 값 불러오기
			var initialRandomValue = sessionStorage.getItem("randomValue");
			if (initialRandomValue) {
				sessionStorage.removeItem("randomValue");
				randomValue = initialRandomValue;
			}
		});

		// 추가된 부분
		function submitFunction() {
			var chatName = $("#chatName").val().trim();
			var chatContent = $("#chatContent").val().trim();

			if (chatName !== "" && chatContent !== "") {
				$.ajax({
					type: "POST",
					url: "saveChat.ch",
					data: { chatName: chatName, chatContent: chatContent },
					success: function(response) {
						// 전송 후 조회
						getChatMessages();
						autoScroll = true; // 메시지 추가되면 스크롤 아래로
					},
					error: function(error) {
						console.log(error);
					}
				});

				// 입력창 초기화
				$("#chatName").val("");
				$("#chatContent").val("");
			}
		}
	</script>
</body>
</html>
