<%@ page language="java" contentType="text/html; charset=UTF-8" pageEncoding="UTF-8"%>
<%@ taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core" %>
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Chat Application</title>
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.4/dist/jquery.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <style>
        #chat-container {
            position: fixed;
            display: none;
            flex-direction: column;
            align-items: flex-end;
        }

        #chat-messages {
            font-size: 12px;
            overflow-y: auto;
            max-height: 300px;
            width: 220px;
            z-index: 1;
            position: fixed;
            top: 20px;
        }

        #chat-input {
            position: fixed;
            bottom: 380px;
            left: 10px;
            width: 200px;
            z-index: 2;
            height: 30px;
            display: none;
        }

        #chat-input .input-group {
            width: 100%;
        }

        #messageInput {
            width: calc(100% - 86px);
        }

        #sendMessageBtn {
            width: 86px;
            margin-top: 3px;
        }

        #toggleChatBtn {
            position: fixed;
            bottom: 300px;
            left: 10px;
            z-index: 3;
        }
    </style>
</head>
<body>
    <div id="chat-container">
        <div id="chat-messages"></div>
        <div id="chat-input">
            <div class="input-group mb-3">
                <input type="text" class="form-control" placeholder="메세지를 입력하세요" id="messageInput">
                <button class="btn btn-primary" type="button" id="sendMessageBtn">전송</button>
            </div>
        </div>
    </div>
    <button class="btn btn-primary" type="button" id="toggleChatBtn">최대화</button>

    <script>
        $(document).ready(function () {
            var autoScroll = true;
            var userName = generateRandomName();
            var chatPollingInterval;

            // 최소화/최대화 상태를 나타내는 변수
            var minimized = true;

            // 페이지 로딩 시 최소화 상태로 설정
            $("#chat-container, #sendMessageBtn, #chat-input").hide();

            // 최소화/최대화 토글 버튼 클릭 이벤트
            $("#toggleChatBtn").click(function () {
                if ($("#toggleChatBtn").text() === "최대화") {
                    // 최대화 버튼을 눌렀을 때
                    $("#chat-container").show();
                    $("#toggleChatBtn").text("최소화");
                    $("#sendMessageBtn, #chat-input").show();
                    startChatPolling();
                } else {
                    // 최소화 버튼을 눌렀을 때
                    $("#sendMessageBtn, #chat-input").hide();
                    $("#toggleChatBtn").text("최대화").show();
                    stopChatPolling();
                    clearChatMessages();
                }
            });

            // 메세지 조회 함수
            function getChatMessages() {
                $.ajax({
                    type: "POST",
                    url: "selectChat.ch",
                    dataType: "json",
                    success: function (response) {
                        var messagesDiv = $("#chat-messages");

                        // 역순으로 출력
                        messagesDiv.empty();
                        for (var i = response.length - 1; i >= 0; i--) {
                            var message = response[i];
                            messagesDiv.append("<p><strong>" + message.chatName + ":</strong> " + message.chatContent + " - " + message.chatDate + "</p>");
                        }

                        if (autoScroll) {
                            // 자동 스크롤 설정
                            messagesDiv.scrollTop(messagesDiv.prop("scrollHeight"));
                            autoScroll = false;
                        }
                    },
                    error: function (xhr, status, error) {
                        console.log(xhr.responseText);
                        console.log(status);
                        console.log(error);
                    }
                });
            }

            // 채팅 메시지 주기적으로 조회하는 함수
            function startChatPolling() {
                // 5초마다 메시지 조회
                chatPollingInterval = setInterval(getChatMessages, 5000);
            }

            // 채팅 메시지 조회 중지 함수
            function stopChatPolling() {
                clearInterval(chatPollingInterval);
            }

            // 채팅창 비우는 함수
            function clearChatMessages() {
                $("#chat-messages").empty();
            }

            // 전송 버튼 클릭 이벤트
            $("#sendMessageBtn").click(function () {
                var messageInput = $("#messageInput");
                var messageContent = messageInput.val().trim();

                if (messageContent !== "") {
                    $.ajax({
                        type: "POST",
                        url: "saveChat.ch",
                        data: { chatName: userName, chatContent: messageContent },
                        success: function (response) {
                            // 전송 후 조회
                            getChatMessages();
                            autoScroll = true; // 메세지 추가되면 스크롤 아래로
                        },
                        error: function (error) {
                            console.log(error);
                        }
                    });

                    // 인풋박스 초기화
                    messageInput.val("");
                }
            });

            // 자동스크롤 비활성화
            $("#chat-messages").on("scroll", function () {
                autoScroll = false;
            });

            // 랜덤한 이름 생성 함수
            function generateRandomName() {
                var characters = "가각건검경고과관국권귀금기길나낙난남납내년념농뇌누눈뉴느는능니다단달담당대더데도독동되된두드디라락란람래랑략량려력련렬렵령례로록론롤롱뢰료루류률륭륵를리릉름린릴림립릿링마막만말망매맨멀메멘면명모목몰못무문물미민밀밍바박반발방배백번벌범법벨별병보복본부분불비빈빙사삭산살삼상새색생서석선설섬섭성세소속솔솜송쇄쇠수숙순술숨슈승시식신실심십쌍써썩쏘쑤쓰쓴씨아악안알암압앙애액앵야약양어억언얼업에여역연열염엽영예오옥온올완외요욕용우울욱운울웅원월웨위윈유육윤율으은을음응의이익인일읽잃임입잇있잊잎자작잔잘잠잡장잦재잰잼잽잿쟁쟈쟝존졸종좋좌죄죠죤주죽준줄중즉즌즐증지진질집징짜짝째쨌쩌쩍쩡쪽쫓쭉쭤쯤차착찬찰참창채책챔챕처척천철첨첩첫청체쳐쳡쳥쳬챙촉촌총촬최쵸추축춘충췌취츠측츰치칙친칠침칩칫칭카칸캄캐캔캠커컨컬컴컷컸컹케켄켈켐켠켰코콕콜콤콩쾌쿄쿠쿨퀴크큐큘클큼큽킴타탁탄탈탐탑탓탕태택탤탬탭턱턴털텀텁텃텅텐토톨톱통톺톼퇴투퉁퉤퉬튜튱트특틈티틱팀팅파팍판팔팜팝팡패팩팬퍼퍽펀펄펑페펙펜펠편평폐포폭폰표푸푹풀품풋풍퓨프플픔피픽핀필핌핍핑하학한할함합핫항해핵햄햇향허헉헌험헛헝헤헬헴혀혁현혈협형혜호혹혼홀홈홉화확환활황회획횡효횬횰후훅훈훌훑훔훗훙훤훨훼휘휴흐흑흔흘흙흠흡흥흩희흰히힌힐힘";

                var name = "";
                for (var i = 0; i < 3; i++) {
                    name += characters.charAt(Math.floor(Math.random() * characters.length));
                }

                return name;
            }
        });
    </script>
</body>
</html>
