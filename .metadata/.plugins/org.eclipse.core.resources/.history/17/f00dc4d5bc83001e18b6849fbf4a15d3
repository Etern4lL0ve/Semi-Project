<%@ page language="java" contentType="text/html; charset=UTF-8" pageEncoding="UTF-8"%>
<%@ taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core" %>
<!DOCTYPE html>
<html>
<head>
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.4/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<link rel="stylesheet" href="css/bootstrap.css">
	<link rel="stylesheet" href="css/custom.css" type="text/css">
	<script src="js/bootstrap.js"></script>
	<title>JSP AJAX 실시간 익명 채팅 사이트</title>
</head>
<body>
	<div class="container">
		<div class="container bootstrap snippet">
			<div class="row">
				<div class="col-xs-12">
					<div class="portlet portlet-default">
						<div class="portlet-title">
							<h4><i class="fa fa-circle text-green"></i>실시간 채팅방</h4>
						</div>
						<div class="clearfix"></div>
					</div>
					<div id="chat" class="panel-collapse collapse in">
						<div class="portlet-body chat-widget" style="overflow-y: auto; width: auto; height: 300px;">
							<div id="chat-messages" class="row">
								<!-- 메시지는 여기에 동적으로 표시됩니다. -->
							</div>
						</div>
						<div class="portlet-footer">
							<div class="row">
								<div class="form-group col-xs-4">
									<input style="height: 40px;" type="text" id="chatName" class="form-control" placeholder="이름" maxlength="20">
								</div>
							</div>
							<div class="row" style="height:90px">
								<div class="form-group col-xs-10">
									<textarea style="height:80px;" id="chatContent" class="form-control" placeholder="메시지를 입력하세요" maxlength="100"></textarea>
								</div> 
							</div>
							<div class="form-group col-xs-2">
								<button type="button" class="btn btn-default pull-right" onclick="submitFunction()">전송</button>
								<div class="cleayfix"></div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>

	<script>
		$(document).ready(function() {
			var autoScroll = true;
			var userName; // 사용자 이름을 저장할 변수

			// 채팅 메시지 조회
			function getChatMessages() {
				$.ajax({
					type: "POST",
					url: "selectChat.ch",
					dataType: "json",
					success: function (response) {
						var messagesDiv = $("#chat-messages");

						// 역순으로 출력
						for (var i = response.length - 1; i >= 0; i--) {
							var message = response[i];
							messagesDiv.append("<p><strong>" + message.chatName + ":</strong> " + message.chatContent + " - " + message.chatDate + "</p>");
						}

						if (autoScroll) {
							// 자동 스크롤 설정
							messagesDiv.scrollTop(messagesDiv.prop("scrollHeight"));
							autoScroll = false;
						}
					},
					error: function (xhr, status, error) {
						console.log(xhr.responseText);
						console.log(status);
						console.log(error);
					}
				});
			}

			// 초기 메시지 조회
			getChatMessages();

			// 전송 버튼 클릭 이벤트
			$("#sendMessageBtn").click(function() {
				var chatContent = $("#chatContent").val().trim();

				if (chatContent !== "") {
					$.ajax({
						type: "POST",
						url: "saveChat.ch",
						data: { chatName: userName, chatContent: chatContent },
						success: function(response) {
							// 전송 후 조회
							getChatMessages();
							autoScroll = true; // 메시지 추가되면 스크롤 아래로
						},
						error: function(error) {
							console.log(error);
						}
					});

					// 입력창 초기화
					$("#chatContent").val("");
				}
			});

			// 자동 스크롤 비활성화
			$("#chat-messages").on("scroll", function() {
				autoScroll = false;
			});

			// 페이지 로딩 시 사용자 이름 입력 받기
			userName = prompt("닉네임을 입력하세요");

			// 페이지 새로고침 시 랜덤 값 변경
			$(window).on("beforeunload", function() {
				sessionStorage.setItem("randomValue", randomString(5));
			});

			// 페이지 로딩 시 랜덤 값 불러오기
			var initialRandomValue = sessionStorage.getItem("randomValue");
			if (initialRandomValue) {
				sessionStorage.removeItem("randomValue");
				randomValue = initialRandomValue;
			}
		});

		// 전송 함수
		function submitFunction() {
			var chatContent = $("#chatContent").val().trim();

			if (chatContent !== "") {
				$.ajax({
					type: "POST",
					url: "saveChat.ch",
					data: { chatName: userName, chatContent: chatContent },
					success: function(response) {
						// 전송 후 조회
						getChatMessages();
						autoScroll = true; // 메시지 추가되면 스크롤 아래로
					},
					error: function(error) {
						console.log(error);
					}
				});

				// 입력창 초기화
				$("#chatContent").val("");
			}
		}
	</script>
</body>
</html>
