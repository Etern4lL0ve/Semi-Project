<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Chat Application</title>
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.4/dist/jquery.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <style>
         #chat-container {
         	font-size : 16px;
            position: fixed;
            display: flex;
            flex-direction: column; /* 세로 방향으로 배치 */
            align-items: flex-end; /* 아이템들을 오른쪽 정렬 */
        }

        #chat-messages {
            overflow-y: auto;
            max-height: 300px; /* 원하는 높이로 조절 */
            width: 220px;
            z-index: 1;
            position: fixed;
            top: 20px;
        }

		 #chat-input {
		    position: fixed;
		    bottom: 300px;
		    left: 10px;
		    width: 200px; /* 입력창의 너비를 조절 */
		    z-index: 2;
		    height : 30px;
		}
		
		#chat-input .input-group {
		    width: 100%;
		}
		
		#messageInput {
		    width: calc(100% - 86px);
		}
		
		/* 버튼 스타일 추가 */
		#sendMessageBtn {
		    width: 86px; /* 버튼의 너비를 조절 */
		    margin-top: 5px; /* 버튼과 인풋박스 사이의 간격을 설정 */
		}
    </style>
</head>
<body>
    <div id="chat-container">
        <div id="chat-messages">
        
        </div>
    </div>
    <div id="chat-input">
        <div class="input-group mb-3">
            <input type="text" class="form-control" placeholder="메세지를 입력하세요" id="messageInput">
            <button class="btn btn-primary" type="button" id="sendMessageBtn">전송</button>
        </div>
    </div>

   <script>
    $(document).ready(function() {
        var autoScroll = true;

        // 내용 가져오기
        function getChatMessages() {
            $.ajax({
                type: "POST",
                url: "selectChat.ch",
                dataType: "json",
                success: function (response) {
                    var messagesDiv = $("#chat-messages");

                    // 최신순으로 받아야해서 역순
                    for (var i = response.length - 1; i >= 0; i--) {
                        var message = response[i];
                        messagesDiv.append("<p><strong>" + message.chatName + ":</strong> " + message.chatContent + " - " + message.chatDate + "</p>");
                    }

                    if (autoScroll) {
                        // 자동 스크롤 설정
                        messagesDiv.scrollTop(messagesDiv.prop("scrollHeight"));
                        autoScroll = false;
                    }
                },
                error: function ( error) {
           
                    console.log(error);
                }
            });
        }

        // 조회
        getChatMessages();

        // 버튼클릭시 전송
        $("#sendMessageBtn").click(function() {
            var messageInput = $("#messageInput");
            var messageContent = messageInput.val().trim();
		

            
            
            if (messageContent !== "") {
                $.ajax({
                    type: "POST",
                    url: "saveChat.ch",
                    data: { chatName: "User", chatContent: messageContent },
                    success: function(response) {
                        // 전송 후 재조회
                        getChatMessages();
                        autoScroll = true; // 스크롤 아래로 이동
                    },
                    error: function(error) {
                        console.log(error);
                    }
                });

                // 인풋박스 초기화
                messageInput.val("");
            }
        });

        // 스크롤이 수동으로 조작된 경우 자동 스크롤 비활성화
        $("#chat-messages").on("scroll", function() {
            autoScroll = false;
        });
    });
</script>
</body>
</html>
