<script>
    $(document).ready(function() {
        var autoScroll = true;
        var userName = prompt("닉네임을 입력하세요"); // 사용자에게 이름 입력 받기

        // 이름이 입력되지 않은 경우 기본값 사용
        if (!userName) {
            userName = "익명";
        }

        // 메세지 조회 함수
        function getChatMessages() {
            $.ajax({
                type: "POST",
                url: "selectChat.ch",
                dataType: "json",
                success: function (response) {
                    var messagesDiv = $("#chat-messages");

                    // 역순으로 출력
                    messagesDiv.empty(); // 기존 메시지 제거
                    for (var i = response.length - 1; i >= 0; i--) {
                        var message = response[i];
                        messagesDiv.append("<p><strong>" + message.chatName + ":</strong> " + message.chatContent + " - " + message.chatDate + "</p>");
                    }

                    if (autoScroll) {
                        // 자동 스크롤 설정
                        messagesDiv.scrollTop(messagesDiv.prop("scrollHeight"));
                        autoScroll = false;
                    }
                },
                error: function (xhr, status, error) {
                    console.log(xhr.responseText);
                    console.log(status);
                    console.log(error);
                }
            });
        }

        // 초기 메세지 조회
        getChatMessages();

        // 전송 버튼 클릭 이벤트 (sendmessagebtn 제거)
        $("#chatContent").keydown(function(e) {
            if (e.keyCode == 13) { // Enter 키가 눌렸을 때
                e.preventDefault(); // 엔터 키 기본 동작 막기
                sendMessage();
            }
        });

        function sendMessage() {
            var messageContent = $("#chatContent").val().trim();

            if (messageContent !== "") {
                $.ajax({
                    type: "POST",
                    url: "saveChat.ch",
                    data: { chatName: userName, chatContent: messageContent },
                    success: function(response) {
                        // 전송 후 조회
                        getChatMessages();
                        autoScroll = true; // 메세지 추가되면 스크롤 아래로
                    },
                    error: function(error) {
                        console.log(error);
                    }
                });

                // 입력창 초기화
                $("#chatContent").val("");
            }
        }

        // 자동스크롤 비활성화
        $("#chat-messages").on("scroll", function() {
            autoScroll = false;
        });
    });
</script>
