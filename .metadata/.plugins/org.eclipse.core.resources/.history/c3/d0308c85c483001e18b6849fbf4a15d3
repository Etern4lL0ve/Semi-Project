<%@ page language="java" contentType="text/html; charset=UTF-8" pageEncoding="UTF-8"%>
<!DOCTYPE html>
<html lang="ko">
<head>
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.4/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="css/bootstrap.css">
    <link rel="stylesheet" href="css/custom.css" type="text/css">
    <script src="js/bootstrap.js"></script>
    <title>JSP AJAX 실시간 익명 채팅 사이트</title>
    <style>
        body {
            font-family: Arial, sans-serif;
        }

        .container {
            margin-top: 20px;
        }

        .chat-widget {
            overflow-y: auto;
            width: auto;
            height: 300px;
            border: 1px solid #ddd;
            padding: 10px;
        }

        #chat-messages p {
            margin: 5px 0;
        }

        #chatContent {
            height: 80px;
        }

        #sendMessageBtn {
            margin-top: 5px;
        }
    </style>
</head>

<body>
    <div class="container">
        <div class="chat-widget">
            <div id="chat-messages"></div>
        </div>
        <div>
            <textarea id="chatContent" class="form-control" placeholder="메시지를 입력하세요" maxlength="100"></textarea>
            <button type="button" id="sendMessageBtn" class="btn btn-default">전송</button>
        </div>
    </div>

    <script>
        $(document).ready(function() {
            var autoScroll = true;
            var userName = prompt("닉네임을 입력하세요") || "익명";

            function getChatMessages() {
                $.ajax({
                    type: "POST",
                    url: "selectChat.ch",
                    dataType: "json",
                    success: function(response) {
                        var messagesDiv = $("#chat-messages");

                        for (var i = response.length - 1; i >= 0; i--) {
                            var message = response[i];
                            messagesDiv.append("<p><strong>" + message.chatName + ":</strong> " + message.chatContent + " - " + message.chatDate + "</p>");
                        }

                        if (autoScroll) {
                            messagesDiv.scrollTop(messagesDiv.prop("scrollHeight"));
                            autoScroll = false;
                        }
                    },
                    error: function(xhr, status, error) {
                        console.log(xhr.responseText);
                        console.log(status);
                        console.log(error);
                    }
                });
            }

            getChatMessages();

            $("#sendMessageBtn").click(function() {
                sendMessage();
            });

            $("#chatContent").keydown(function(e) {
                if (e.keyCode == 13) {
                    e.preventDefault();
                    sendMessage();
                }
            });

            function sendMessage() {
                var messageContent = $("#chatContent").val().trim();

                if (messageContent !== "") {
                    $.ajax({
                        type: "POST",
                        url: "saveChat.ch",
                        data: { chatName: userName, chatContent: messageContent },
                        success: function(response) {
                            getChatMessages();
                            autoScroll = true;
                        },
                        error: function(error) {
                            console.log(error);
                        }
                    });

                    $("#chatContent").val("");
                }
            }

            $("#chat-messages").on("scroll", function() {
                autoScroll = false;
            });
        });
    </script>
</body>
</html>
